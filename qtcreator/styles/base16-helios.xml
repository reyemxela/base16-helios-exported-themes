<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Helios">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Helios scheme by Alex Meyer (https://github.com/reyemxela)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#d5d5d5" background="#1d2021"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#53585b"/>
  <style name="CurrentLine" background="#6f7579"/>
  <style name="LineNumber" foreground="#6f7579"/>
  <style name="CurrentLineNumber" foreground="#cdcdcd" bold="true"/>
  <style name="SearchResult" background="#383c3e"/>
  <style name="Parentheses" background="#53585b" />
  <style name="ParenthesesMismatch" background="#be4264" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#e5e5e5" background="#6f7579"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#6f7579"/>
  <style name="Occurrences.Rename" background="#cdcdcd"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#eb8413"/>

  <!-- language primitives -->
  <style name="Number" foreground="#eb8413"/>
  <style name="String" foreground="#88b92d"/>
  <style name="Keyword" foreground="#be4264"/>
  <style name="Operator" foreground="#d5d5d5"/>
  <style name="Preprocessor" foreground="#1e8bac"/>
  <style name="Label" foreground="#d72638"/>

  <!-- types, classes -->
  <style name="Type" foreground="#f19d1a"/>
  <style name="PrimitiveType" foreground="#be4264"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#1e8bac"/>
  <style name="VirtualMethod" foreground="#1e8bac" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#dddddd"/>
  <style name="Local" foreground="#d5d5d5"/>
  <style name="Global" foreground="#d5d5d5"/>
  <style name="Static" foreground="#d5d5d5"/>
  <style name="JsScopeVar" foreground="#d5d5d5" italic="true"/>
  <style name="JsImportVar" foreground="#d5d5d5" italic="true"/>
  <style name="JsGlobalVar" foreground="#d5d5d5" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#53585b"/>

  <!-- comments -->
  <style name="Comment" foreground="#6f7579"/>
  <style name="DisabledCode" foreground="#6f7579"/>
  <style name="Doxygen.Comment" foreground="#6f7579"/>
  <style name="Doxygen.Tag" foreground="#6f7579"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#be4264"/>
  <style name="Binding" foreground="#d72638"/>
  <style name="QmlExternalId" foreground="#1e8bac" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#1e8bac" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#be4264"/>
  <style name="DiffLocation" foreground="#1e8bac"/>
  <style name="AddedLine" foreground="#88b92d"/>
  <style name="RemovedLine" foreground="#f19d1a"/>
  <style name="LogChangeLine" foreground="#d72638"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#be4264"/>
  <style name="DiffContextLine" foreground="#1e8bac"/>
  <style name="DiffSourceLine" foreground="#88b92d"/>
  <style name="DiffSourceChar" foreground="#f19d1a" background="#383c3e"/>
  <style name="DiffDestLine" foreground="#88b92d"/>
  <style name="DiffDestChar" foreground="#f19d1a" background="#383c3e"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#d72638" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#d72638" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#f19d1a" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#f19d1a" underlineStyle="DotLine"/>
</style-scheme>
