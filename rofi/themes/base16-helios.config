! Enable the extended coloring options
rofi.color-enabled: true

! Property Name     BG       Border   Separator
rofi.color-window:  #303335, #303335, #1d2021

! Property Name     BG       FG       BG-alt   Head-BG  Head-FG
rofi.color-normal:  #303335, #d5d5d5, #303335, #303335, #e5e5e5
rofi.color-active:  #303335, #1e8bac, #303335, #303335, #1e8bac
rofi.color-urgent:  #303335, #d72638, #303335, #303335, #d72638

! Set the desired separator style
rofi.separator-style: solid
